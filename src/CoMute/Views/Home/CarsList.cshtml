@{
    ViewBag.Title = "CarsList";
}

<div class="page-content">

    <div class="page-content-wrapper border">

        <!-- Title -->
        <div class="bg-dark p-4 text-center rounded-3">
            <div class="col-12 d-sm-flex justify-content-between align-items-center">
                <h1 class="text-success m-0">List Of CarPools<h1>
            </div>
        </div>


        <!-- Card START -->
        <div class="card bg-transparent border">

            <!-- Card header START -->
            <div class="card-header bg-light border-bottom">
                <!-- Search and select START -->
                <div class="row g-3 align-items-center justify-content-between">
                    <!-- Search bar -->
                    <div class="col-md-8">
                        <form class="rounded position-relative">
                            <input class="form-control bg-body" type="search" placeholder="Search car-pool" aria-label="Search">
                            <button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
                                <i class="fas fa-search fs-6 "></i>
                            </button>
                        </form>
                    </div>

                    <!-- Select option -->
                    <div class="col-md-3">
                        <!-- Short by filter -->
                        <form>
                            <select class="form-select js-choice border-0 z-index-9" aria-label=".form-select-sm">
                                <option value="">Sort cars by</option>
                                <option>Newest</option>
                                <option>Oldest</option>
                                <option>Name</option>

                            </select>
                        </form>
                    </div>
                </div> 
                <!-- Search and select END -->
            </div>
            <!-- Card header END -->
            <!-- Card body START -->
            <div class="card-body">
                <!-- Course table START -->
                <div class="table-responsive border-0 rounded-3">
                    <!-- Table START -->
                    <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                        <!-- Table head -->
                        <thead>
                            <tr>
                                <th class="border-0 rounded-start">Departure time</th>
                                <th class="border-0">Expected Arrival time</th>
                                <th class="border-0">Origin</th>
                                <th class="border-0">Days available</th>
                                <th class="border-0">Destination</th>
                                <th class="border-0">Available seats</th>
                                <th class="border-0">Leader</th>
                                <th class="border-0">Notes</th>
                                <th class="border-0">Date created</th>
                                <th class="border-0">Join CarPool</th>
                            </tr>
                        </thead>


                    </table>

                    <a href="/Home/CarRegister" class="btn btn-sm btn-success mb-0">Add new car</a>

                </div>
                <!-- Course table END -->
            </div>
            <!-- Card body END -->
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript" src="~/Content/js/carRegister.js"></script>
}
