@{
    ViewBag.Title = "Register";
}

<div class="page-content">
    <!-- Page main content START -->
    <div class="page-content-wrapper border">
        <section class="py-0">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="bg-dark p-4 text-center rounded-3">
                            <h1 class="text-success m-0">Update User Profile</h1>
                            <!-- Breadcrumb -->
                            <div class="d-flex justify-content-center">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
                                        <li class="breadcrumb-item"><a href="Index">Home</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Update User Profile</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="pt-4">
            <div class=" container">
                <div class="card bg-transparent border rounded-3">
                    <div class="card-header bg-transparent border-bottom">

                    </div>
                    <!-- Card body START -->
                    <div class="card-body">
                        <!-- Form -->
                        <form class="row g-4" method="post" asp-page="CreateUser" enctype="multipart/form-data">

                            <!-- First Name -->
                            <div class="col-md-6">
                                <label class="form-label text-success ">Name</label>
                                <input type="text" id="name" class="form-control" placeholder=" name" required autofocus  autocomplete="off">
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <label class="form-label text-success ">Surname</label>
                                <input type="text" id="Surname" class="form-control" placeholder="Surname" required autofocus  autocomplete="off">
                            </div>

                            <!--Email Adress-->
                            <div class="col-md-6">
                                <label class="form-label text-success ">Phone</label>
                                <input type="text" id="Phone" class="form-control" placeholder="Phone" required autofocus  autocomplete="off">
                            </div>
                            <!--Cellphone number-->
                            <div class="col-md-6">
                                <label class="form-label text-success ">Email Address</label>
                                <input type="text" id="Email Address" class="form-control" placeholder="Email Address" required autofocus autocomplete="off">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-success ">Password</label>
                                <input type="text" id="Password" class="form-control" placeholder="Password" required autofocus  autocomplete="off">
                            </div>


                            <!-- Save button -->
                            <div class="col-md-6">
                                <label class="form-label text-success "></label>
                                <button class="btn btn-success btn-block" type="submit" id="sign-in">click to Update you Profile</button>
                            </div>

                        </form>
                    </div>
                    <!-- Card body END -->
                </div>
                <!-- Edit profile END -->

            </div>
        </section>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Content/js/register.js"></script>
}
